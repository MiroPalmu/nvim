{ 
  "languageserver": {
    "coc-clangd": {
      "command": "coc-clangd",
      "rootPatterns": [ ".git/" ],
      "filetypes": ["c", "cc", "cpp", "c++", "h", "hpp", "objc", "objcpp"],
      "diagnostic.checkCurrentLine": true,
      "clangd.compilationDatabaseCandidates": [ "${workspaceFolder}/build" ]
    }
  }
}
